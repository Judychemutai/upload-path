<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/my_profileImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/profileimage"/>

    <Button
        android:id="@+id/bt_chooseImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_profileImage"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Choose Image"
        android:textSize="20dp"
        />


<EditText
    android:id="@+id/et_enter_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Enter name"
    android:layout_below="@id/bt_chooseImage"
    android:layout_marginTop="30dp"
    android:layout_marginStart="30dp"
    android:paddingRight="200dp"
    android:textSize="20dp"

    />


    <EditText
        android:id="@+id/et_enter_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_enter_name"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:paddingRight="130dp"
        android:hint="Enter phone number"
        android:textSize="20dp"
        />


    <EditText
        android:id="@+id/et_enter_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter email"
        android:layout_below="@id/et_enter_phone_number"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:paddingRight="200dp"
        android:textSize="20dp"
        />


    <Button
        android:id="@+id/bt_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_enter_email"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textSize="20dp"/>






</RelativeLayout>